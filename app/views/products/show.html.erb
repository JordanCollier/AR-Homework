<h1>PRODUCTS</h1>
<table border="1">
  <tr>
    <th> Title </th>
    <th> Description </th>
    <th> Rating </th>
  </tr>


  <tbody>
    <% @product.reviews.each do |review| %>
    <tr>
      <td> <%= review.title %></td>
      <td> <%= review.description %></td>
      <td> <%= review.rating %></td>
    </tr>
    <% end %>
  <%= link_to "SWAG SOME REVIEW FOOL", new_company_product_review_path(@product.company, @product) %>


  </tbody>


</table>
